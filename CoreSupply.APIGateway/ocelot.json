{
  "Routes": [
    // 1. سفارشات (GET)
    {
      "UpstreamPathTemplate": "/api/v1/Order/{userName}",
      "UpstreamHttpMethod": [ "Get", "Options" ],
      "DownstreamScheme": "http",
      "DownstreamPathTemplate": "/api/v1/Order/{userName}",
      "DownstreamHostAndPorts": [
        {
          "Host": "ordering.api",
          "Port": 8080
        }
      ]
    },
    // 2. لاگین
    {
      "UpstreamPathTemplate": "/auth/login",
      "UpstreamHttpMethod": [ "Post", "Options" ],
      "DownstreamScheme": "http",
      "DownstreamPathTemplate": "/api/v1/Auth/Login",
      "DownstreamHostAndPorts": [
        {
          "Host": "identity.api",
          "Port": 8080
        }
      ]
    },
    // 3. کاتالوگ
    {
      "UpstreamPathTemplate": "/catalog/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE", "OPTIONS" ],
      "DownstreamScheme": "http",
      "DownstreamPathTemplate": "/api/v1/catalog/{everything}",
      "DownstreamHostAndPorts": [
        {
          "Host": "catalog.api",
          "Port": 8080
        }
      ]
    },
    // 4. سبد خرید
    {
      "UpstreamPathTemplate": "/basket/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "DELETE", "OPTIONS" ],
      "DownstreamScheme": "http",
      "DownstreamPathTemplate": "/api/v1/basket/{everything}",
      "DownstreamHostAndPorts": [
        {
          "Host": "quote.api",
          "Port": 8081
        }
      ]
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:9000"
  }
}
